{
  "name": "junit-report-builder",
  "version": "3.0.1",
  "description": "Aimed at making it easier to build Jenkins compatible JUnit XML reports in plugins for testing frameworks",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write src/**/*.ts spec/**/*.ts **/*.json **/*.yml",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build && require-self",
    "prepublishOnly": "npm run test",
    "test": "jest",
    "release": "release-it"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/davidparsson/junit-report-builder.git"
  },
  "keywords": [
    "junit",
    "xunit",
    "report",
    "builder"
  ],
  "author": "David PÃ¤rsson <david@parsson.se>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davidparsson/junit-report-builder/issues"
  },
  "homepage": "https://github.com/davidparsson/junit-report-builder",
  "engines": {
    "node": ">=12"
  },
  "jest": {
    "maxWorkers": "1",
    "projects": [
      {
        "displayName": "test",
        "testMatch": [
          "**/spec/**/*.[jt]s?(x)",
          "**/?(*.)+(spec|test).[tj]s?(x)"
        ],
        "transform": {
          "^.+\\.ts?$": "ts-jest"
        }
      },
      {
        "displayName": "prettier",
        "runner": "prettier",
        "moduleFileExtensions": [
          "ts",
          "json",
          "yaml",
          "yml"
        ],
        "testMatch": [
          "<rootDir>/src/**/*.ts",
          "<rootDir>/spec/**/*.ts",
          "**/*.json",
          "**/*.yaml",
          "**/*.yml"
        ]
      }
    ]
  },
  "devDependencies": {
    "@types/jest": "^28.1.1",
    "@types/lodash": "^4.14.180",
    "@types/node": "^17.0.21",
    "grunt": "^0.4.5",
    "grunt-cli": "^1.4.3",
    "grunt-contrib-jshint": "^0.11.2",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-jasmine-nodejs": "1.4.0",
    "grunt-release": "^0.12.0",
    "jest": "^28.1.1",
    "jest-runner-prettier": "^1.0.0",
    "jit-grunt": "^0.9.1",
    "prettier": "^2.6.0",
    "release-it": "^15.1.3",
    "require-self": "^0.2.3",
    "rimraf": "^2.3.3",
    "time-grunt": "^1.2.1",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "date-format": "4.0.3",
    "lodash": "^4.17.21",
    "make-dir": "^3.1.0",
    "xmlbuilder": "^15.1.1"
  },
  "release-it": {
    "github": {
      "release": false
    },
    "hooks": {
      "before:init": ["npm test"]
    }
  }
}
